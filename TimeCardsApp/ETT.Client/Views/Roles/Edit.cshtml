@using Microsoft.AspNetCore.Identity
@model ETT.Web.Models.Users.ChangeRoleViewModel

@{
    ViewData["Title"] = "Изменение ролей для пользователя " + @Model.UserEmail;
}

<div class="container">
    <div class="section row">
        <div class="col s6 offset-s3">
            <form asp-action="Edit" method="post">
                <input type="hidden" name="userId" value="@Model.UserId" />
                <input type="hidden" name="page" value="@Model.PageNumber" />
                <input type="hidden" name="PageFilter" value="@Model.FilterString" />
                <table class="">
                    <thead>
                        <tr>
                            <th><h5>Role</h5></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (IdentityRole<int> role in Model.AllRoles)
                        {
                            <tr>
                                <td>
                                    @Html.CheckBoxMultiMaterialize(@role.Name, @role.Name, "Roles", @Model.UserRoles.Contains(role.Name))
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <button type="submit" class="btn waves-effect waves-light">Сохранить<i class="material-icons right">send</i></button>
            </form>
        </div>
    </div>
</div>

@section breadcrumbs{
    <a asp-action="Index" class="breadcrumb">
        Index
    </a>
    <a asp-action="UserList" class="breadcrumb">
        UserList
    </a>
    <a href="#!" class="breadcrumb breadcrumbmargin1">Change Roles</a>
}