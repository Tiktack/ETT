@model ETT.Web.Models.Projects.ProjectViewModel

@{
    ViewData["Title"] = "Create Project";
}

<div class="container">
    <div class="row">
        <div class="col s12">
            <form asp-action="Create">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="card red lighten-3 white-text">
                        <div class="card-content">
                            <span class="card-title">@Localizer["Errors"]</span>
                            <div asp-validation-summary="All"></div>
                        </div>
                    </div>
                }
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">@ViewData["Title"]</span>
                        <div class="input-field">
                            <input asp-for="Name" class="validate" />
                            <label asp-for="Name"></label>
                        </div>
                        <div class="input-field">
                            <textarea asp-for="Description" class="materialize-textarea"></textarea>
                            <label asp-for="Description"></label>
                        </div>
                    </div>
                    <div class="card-action">
                        <input type="submit" class="btn @Design.Color" value="@Localizer["Create"]" />
                        <a asp-action="List"><input type="button" class="btn @Design.Color lighten-3" value="@Localizer["Cancel"]" /></a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
