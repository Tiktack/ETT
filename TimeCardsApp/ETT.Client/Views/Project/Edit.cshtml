@model ETT.Web.Models.Projects.ProjectViewModel

@{
    Layout = null;
}

<div class="container">
    <div class="row">
        <div class="col s12">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="card red lighten-3 white-text">
                    <div class="card-content">
                        <span class="card-title">@Localizer["Errors"]</span>
                        <div asp-validation-summary="All"></div>
                    </div>
                </div>
            }
            <form id="form-project-edit" asp-action="Edit">
                <div class="card">
                    <div class="card-content">
                        <div class="input-field">
                            <input asp-for="Name" class="validate" />
                            <label asp-for="Name"></label>
                        </div>
                        <div class="input-field">
                            <textarea asp-for="Description" class="materialize-textarea"></textarea>
                            <label asp-for="Description"></label>
                        </div>
                        <div class="hide">
                            <input asp-for="Id" />
                        </div>
                    </div>
                    <div class="card-action">
                        <button id="btn-project-edit" onclick="ProjectEdit(@Model.Id, true)" type="button" class="btn @Design.Color">@Localizer["Save"]</button>
                        <button id="btn-project-details" onclick="ProjectDetails(@Model.Id)" type="button" class="btn @Design.Color lighten-3">@Localizer["Cancel"]</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $(function () {
        Materialize.updateTextFields();
        $('#Description').trigger('autoresize');
    });
</script>
