@model ETT.Web.Models.Projects.ProjectViewModel

@{
    Layout = null;
}

@if (Model.Id == default(int))
{
    <script>
        window.location = '@Url.Action("List")';
    </script>
}
else
{
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">@Localizer["Question"]</span>
                        <h5>@Localizer["Project"] «@Model.Name»</h5>
                    </div>
                    <div class="card-action">
                        <form id="form-project-delete" asp-action="Delete">
                            <button id="btn-project-delete" onclick="ProjectDelete(@Model.Id, true)" type="button" class="btn red darken-2">@Localizer["Delete"]</button>
                            <button id="btn-project-details" onclick="ProjectDetails(@Model.Id)" type="button" class="btn @Design.Color lighten-3">@Localizer["Cancel"]</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
