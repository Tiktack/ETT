@model ETT.Web.Models.Users.ChangePasswordViewModel

@{
    ViewBag.Title = "Изменение пароля для пользователя " + Model.Email;
}

<div class="container">
    <div class="section row">
        <div class="col s6 offset-s3">
            <form asp-action="ChangePassword" asp-controller="Users">
                <div asp-validation-summary="All" class="red-text largetext"></div>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />
                <br />
                <div class="section row" style="margin-top:-40px">
                    <div class="col s12">
                        <div class="input-field">
                            <label asp-for="OldPassword" class=""></label>
                            <input asp-for="OldPassword" class="" />
                            <span asp-validation-for="OldPassword" class="red-text"></span>
                        </div>
                    </div>
                </div>
                <div class="section row" style="margin-top:-40px">
                    <div class="col s12">
                        <div class="input-field">
                            <label asp-for="NewPassword" class=""></label>
                            <input asp-for="NewPassword" class="" />
                            <span asp-validation-for="NewPassword" class="red-text"></span>
                        </div>
                    </div>
                </div>
                <br />
                <button type="submit" class="btn waves-effect waves-light">Сохранить<i class="material-icons right">send</i></button>
            </form>
        </div>
    </div>
</div>

@section breadcrumbs{
    <a asp-action="Index" class="breadcrumb">
        Index
    </a>
    <a href="#!" class="breadcrumb breadcrumbmargin2">Change Password</a>
}